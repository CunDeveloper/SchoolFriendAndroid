<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="@dimen/padding_left"

    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/school_friend_item_headicon_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/padding_left"
        android:paddingRight="@dimen/padding_right"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/school_friend_item_name_text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/school_friend_item_label_text"
                android:paddingLeft="@dimen/padding_left"
                android:layout_gravity="bottom"
                  />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/school_friend_item_content"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/school_friend_item_images_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="0dp"
                    android:id="@+id/school_frien_item_im1"
                    android:layout_height="wrap_content"

                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:id="@+id/school_frien_item_im2"
                    android:layout_height="wrap_content"

                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:id="@+id/school_frien_item_im3"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="0dp"
                    android:id="@+id/school_frien_item_im4"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:id="@+id/school_frien_item_im5"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:id="@+id/school_frien_item_im6"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="0dp"
                    android:id="@+id/school_frien_item_im7"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:id="@+id/school_frien_item_im8"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:id="@+id/school_frien_item_im9"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_blue_dark"
            android:id="@+id/school_friend_item_publish_location"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_left"
            android:id="@+id/school_friend_item_publish_date"
            />
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="-32dp"
            android:id="@+id/school_friend_item_com_img"
            android:layout_gravity="right"
            android:src="@drawable/ic_menu_compose"
            />
        <com.nju.View.NonScrollableListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:background="#F5F5F5"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:id="@+id/school_friend_item_listView"
            >

        </com.nju.View.NonScrollableListView>
    </LinearLayout>
</LinearLayout>

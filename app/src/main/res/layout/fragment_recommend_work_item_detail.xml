<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:id="@+id/mScrollView">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"

                android:layout_height="wrap_content">
                <com.nju.View.SchoolFriendTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/phone_apadding"
                    android:paddingStart="@dimen/phone_apadding"
                    android:paddingEnd="@dimen/phone_apadding"
                    android:text="1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/light_blue"
                    android:id="@+id/recommend_work_item_detail_title"
                    />

                <com.nju.View.SchoolFriendTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/phone_apadding"
                    android:paddingEnd="@dimen/phone_apadding"
                    android:text="2"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="@dimen/phone_apadding"
                    android:id="@+id/recommend_work_item_detail_detail"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/phone_apadding"
                    android:paddingStart="@dimen/phone_apadding"
                    android:paddingEnd="@dimen/phone_apadding"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/light_blue"
                        android:text="1637269790@qq.com"

                        android:id="@+id/email_tv"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/textView33" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/jian_li_post_to"
                        android:id="@+id/textView33"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="2010"
                    android:layout_marginTop="@dimen/padding_left"
                    android:paddingStart="@dimen/phone_apadding"
                    android:paddingEnd="@dimen/phone_apadding"
                    android:id="@+id/date_tv"
                    />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_left"
                    android:paddingStart="@dimen/phone_apadding"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Medium Text"
                        android:paddingEnd="@dimen/phone_apadding"
                        android:textColor="@color/light_blue"
                        android:id="@+id/name_tv"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Small Text"
                        android:id="@+id/label_tv"
                        android:layout_alignParentBottom="true"
                        android:layout_toEndOf="@+id/name_tv" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_left"
                    android:background="@color/light_gray"
                    />
                <include layout="@layout/hot_comment"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_left"
                    android:background="@color/light_gray"
                    />
                <include layout="@layout/new_comment"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp"/>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/gray_line_bg"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:id="@+id/re_work_item_detail_layout"
            android:layout_height="60dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_height="match_parent"
                android:layout_marginEnd="-1dp"
                android:background="@drawable/item_toggle_bg"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/yingping"
                android:id="@+id/re_work_item_yinpin_tv" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_height="match_parent"
                android:layout_marginEnd="-1dp"
                android:background="@drawable/item_toggle_bg"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/zixun"
                android:id="@+id/re_work_item_ask_tv" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_height="match_parent"
                android:background="@drawable/item_toggle_bg"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/collect"
                android:id="@+id/collect_tv" />
        </LinearLayout>
    </RelativeLayout>
    </FrameLayout>
    <include layout="@layout/comment_input"/>
</RelativeLayout>
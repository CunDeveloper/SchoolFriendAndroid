<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.nju.fragment.CircleImageViewFragment">
    <android.support.v4.view.ViewPager
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/fragment_circle_image_view_viewpager"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:id="@+id/fragment_circle_image_view_label_layout"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal"
            android:layout_height="@dimen/phone_apadding"/>
    </FrameLayout>
</FrameLayout>

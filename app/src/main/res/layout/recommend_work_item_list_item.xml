<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
     >
    <com.nju.View.SchoolFriendTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/re_list_item_title"
        android:layout_marginBottom="@dimen/phone_apadding"
        android:textColor="@color/light_blue"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:id="@+id/re_list_item_name"
        android:layout_below="@+id/re_list_item_title"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/re_list_item_label"
        android:layout_alignBottom="@+id/re_list_item_name"
        android:layout_toEndOf="@+id/re_list_item_name" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/re_list_item_date"
        android:layout_alignBottom="@+id/fragment_re_list_item_count"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/fragment_re_list_item_count"
        android:text="2"
        android:layout_below="@+id/re_list_item_name"
        android:layout_toStartOf="@+id/textView15" />

    <com.nju.View.SchoolFriendAweTextView
        android:layout_width="wrap_content"
        android:layout_marginEnd="@dimen/phone_apadding"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/comment_icon"
        android:id="@+id/textView15"
        android:layout_alignTop="@+id/re_list_item_date"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
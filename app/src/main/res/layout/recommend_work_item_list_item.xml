<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingStart="@dimen/phone_apadding"
    android:paddingEnd="@dimen/phone_apadding"
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
     >
    <com.nju.View.SchoolFriendTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/re_list_item_title"
        android:text="222"
        android:layout_marginBottom="@dimen/FIVE_DP"
        android:textColor="@color/light_blue"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />
    <com.nju.View.SchoolFriendTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black"
        android:maxLines="3"
        android:text="hhh"
        android:layout_marginBottom="@dimen/FIVE_DP"
        android:ellipsize="end"
        android:id="@+id/content_tv"
        android:layout_below="@+id/re_list_item_title"
        android:layout_alignParentStart="true" />
    <com.nju.View.SchoolFriendGridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:horizontalSpacing="@dimen/FIVE_DP"
        android:verticalSpacing="@dimen/FIVE_DP"
        android:id="@+id/mGridView"
        android:layout_below="@+id/content_tv"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/re_list_item_date"
        android:text="111"
        android:layout_below="@+id/mGridView"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/comment_number_tv"
        android:text="0"
        android:layout_alignTop="@+id/textView15"
        android:layout_alignEnd="@+id/mGridView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/comment_str"
        android:id="@+id/textView15"
        android:layout_alignTop="@+id/name_tv"
        android:layout_toStartOf="@+id/comment_number_tv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/phone_apadding"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/recommend"
        android:id="@+id/textView32"
        android:layout_below="@+id/re_list_item_date"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/light_blue"
        android:text="name"
        android:id="@+id/name_tv"
        android:layout_alignTop="@+id/textView32"
        android:layout_toEndOf="@+id/textView32" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/light_blue"
        android:id="@+id/delete_tv"
        android:layout_alignTop="@+id/name_tv"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
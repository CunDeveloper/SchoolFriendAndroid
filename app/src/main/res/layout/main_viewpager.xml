<android.support.design.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_Viewpager_content"
    android:layout_width="match_parent"
    android:background="@android:color/black"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/main_viewpager_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:fitsSystemWindows="true">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                android:elevation="4dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_scrollFlags="scroll|enterAlways|snap">
                <ImageView
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:src="@mipmap/ic_lockscreen_camera_activated"
                    android:paddingLeft="@dimen/button_padding"
                    android:paddingRight="@dimen/button_padding"
                    android:visibility="gone"
                    android:id="@+id/main_viewpager_camera_imageView"
                    />
                <Button
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle_button_bg"
                    android:layout_gravity="end"
                    android:layout_marginEnd="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:visibility="gone"
                    android:id="@+id/main_viewpager_menu_bn"
                    android:textColor="?attr/colorPrimary"
                    />
                <com.nju.View.SchoolFriendAweTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textSize="32sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/button_padding"
                    android:paddingRight="@dimen/button_padding"
                    android:visibility="gone"
                    android:text="@string/trash_icon"
                    android:id="@+id/main_viewpager_menu_delete_img"
                    />
                <com.nju.View.SchoolFriendAweTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textSize="32sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/button_padding"
                    android:paddingRight="@dimen/button_padding"
                    android:visibility="gone"
                    android:text="@string/ellipsis_icon"
                    android:id="@+id/main_viewpager_menu_more"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:visibility="gone"
                    android:id="@+id/main_viewpager_no_action_bar_layout"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/voice_label1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_red_dark"
                        android:text="@string/work"
                        />
                    <TextView
                        android:id="@+id/voice_label2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:text="@string/learing"
                        />
                    <TextView
                        android:id="@+id/voice_label3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:text="@string/find_job"
                        />
                    <TextView
                        android:id="@+id/voice_label4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:text="@string/shixi"
                        />
                    <TextView
                        android:id="@+id/voice_label5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:text="@string/more"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:visibility="gone"
                    android:id="@+id/main_viewpager_no_action_recommend_work_layout"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/rec_label1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_red_dark"
                        android:text="@string/shixi"
                        />
                    <TextView
                        android:id="@+id/rec_label2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:text="@string/xiaozhao"
                        />
                    <TextView
                        android:id="@+id/rec_label3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:text="@string/shezhao"
                        />
                </LinearLayout>

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </android.support.design.widget.CoordinatorLayout>


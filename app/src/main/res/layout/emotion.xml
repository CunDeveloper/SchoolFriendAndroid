<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/emotion_layout"
    android:visibility="gone"
    android:clickable="false"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="50dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc"/>
        <ImageView
            android:id="@+id/emotion_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal|start"
            android:padding="0dp"
            android:layout_marginStart="16dp"
            android:src="@mipmap/ic_menu_emoticons" />
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/emotion_pager"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:layout_marginTop="-20dp"
        android:orientation="horizontal"
        >
        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:id="@+id/emotion_pager_view1"
            android:layout_marginStart="16dp"
            android:background="@drawable/select_circle_label_bg"
            />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:id="@+id/emotion_pager_view2"
            android:background="@drawable/unselect_circle_label_bg"
            android:layout_marginStart="16dp"
            />
        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:id="@+id/emotion_pager_view3"
            android:layout_marginStart="16dp"
            android:background="@drawable/unselect_circle_label_bg"
            />
    </LinearLayout>
</LinearLayout>
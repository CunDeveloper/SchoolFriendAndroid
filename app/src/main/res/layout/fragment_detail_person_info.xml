<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_gray"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingStart="@dimen/phone_apadding"
        android:paddingEnd="@dimen/phone_apadding"
        android:layout_marginTop="@dimen/phone_apadding"
        android:background="@android:color/white"
        android:layout_height="@dimen/item_height">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView"
            android:layout_marginEnd="@dimen/phone_apadding"
            android:src="@drawable/head2"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="张小军"
            android:textColor="@android:color/black"
            android:id="@+id/nameTV"
            android:layout_alignTop="@+id/imageView"
            android:layout_toEndOf="@+id/imageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="南京大学 软件学院 2014"
            android:textColor="@android:color/black"
            android:id="@+id/labeTv"
            android:layout_below="@+id/nameTV"
            android:layout_toEndOf="@+id/imageView" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/phone_apadding"
        android:padding="@dimen/phone_apadding"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="详细信息"
        android:textColor="@android:color/black"
        android:id="@+id/infoTV" />

</LinearLayout>

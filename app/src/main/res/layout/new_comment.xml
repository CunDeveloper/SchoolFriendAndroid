<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingTop="@dimen/padding_left"
    android:id="@+id/new_comment_layout"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="@dimen/phone_apadding"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:background="@android:color/holo_red_dark"
            android:id="@+id/textView34"
            android:layout_marginEnd="@dimen/phone_apadding"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/new_comment"
            android:textColor="@android:color/black"
            android:id="@+id/textView35"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView34"
            />
    </RelativeLayout>
    <com.nju.View.NonScrollableListView
        android:layout_marginStart="@dimen/padding_left"
        android:layout_marginEnd="@dimen/phone_apadding"
        android:id="@+id/new_comment_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
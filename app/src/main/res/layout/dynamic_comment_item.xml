<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:paddingTop="@dimen/dp5"
    android:paddingBottom="@dimen/dp5"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/headIMG"
        android:layout_width="@dimen/dp40"
        android:layout_marginEnd="@dimen/dp5"
        android:scaleType="fitXY"
        android:src="@drawable/head"
        android:layout_height="@dimen/dp40" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_blue"
                android:text="@string/a_public"
                android:id="@+id/commentTv" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/replayStrTv"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/commentTv" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:textColor="@color/light_blue"
                android:id="@+id/commentedTv"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/replayStrTv" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/dateTv"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <com.nju.View.SchoolFriendTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginTop="@dimen/phone_apadding"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/contentTv" />

    </LinearLayout>
</LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:id="@+id/fragment_person_circle_detail_pic_viewpager"
        />
    <LinearLayout
        android:layout_width="match_parent"

        android:background="@android:color/transparent"
        android:layout_above="@+id/fragment_person_circle_detail_pic_comment_layout"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3">
    <com.nju.View.SchoolFriendTextView
        android:id="@+id/fragment_person_circle_detail_pic_content_tv"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/phone_apadding"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/fragment_person_circle_detail_pic_comment_layout"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/praiseTv"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_height="wrap_content">
            <com.nju.View.SchoolFriendAweTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginStart="@dimen/phone_apadding"
                android:text="@string/praise_icon"
                android:textColor="@android:color/white"
                android:id="@+id/textView8"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/praise_str"
                android:layout_marginEnd="@dimen/phone_apadding"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/commentTv"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/praiseTv"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <com.nju.View.SchoolFriendAweTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginStart="@dimen/phone_apadding"
                android:text="@string/comment_icon"
                android:textColor="@android:color/white"
                android:id="@+id/textView9"
                android:textStyle="bold"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comment_str"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:layout_toEndOf="@+id/textView9"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/displayDetailLayout"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content">
            <com.nju.View.SchoolFriendAweTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/praise_icon"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginEnd="@dimen/dp5"
                android:id="@+id/fragment_person_circle_detail_pic_comment_awe"
                />
            <TextView
                android:id="@+id/praise_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginEnd="@dimen/phone_apadding"
                android:textColor="@android:color/white"
                />
            <com.nju.View.SchoolFriendAweTextView
                android:layout_width="wrap_content"
                android:text="@string/comment_icon"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp5"
                />
            <TextView
                android:id="@+id/comment_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0"
                android:layout_marginEnd="@dimen/phone_apadding"
                android:textColor="@android:color/white"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
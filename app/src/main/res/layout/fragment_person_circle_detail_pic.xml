<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:id="@+id/fragment_person_circle_detail_pic_viewpager"
        />
    <LinearLayout
        android:layout_width="match_parent"

        android:background="@android:color/transparent"
        android:layout_above="@+id/fragment_person_circle_detail_pic_comment_layout"
        android:layout_height="wrap_content">
    <com.nju.View.SchoolFriendTextView
        android:id="@+id/fragment_person_circle_detail_pic_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textColor="@android:color/white"
        android:textStyle="bold"
        />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/fragment_person_circle_detail_pic_comment_layout"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        >
        <com.nju.View.SchoolFriendAweTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="@dimen/phone_apadding"
            android:text="@string/praise_icon"
            android:textColor="@android:color/white"
            android:id="@+id/textView8"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="赞"
            android:id="@+id/text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:layout_toRightOf="@+id/textView8"
            />

        <com.nju.View.SchoolFriendAweTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="@dimen/phone_apadding"
            android:text="@string/comment_icon"
            android:textColor="@android:color/white"
            android:id="@+id/textView9"
            android:layout_toRightOf="@+id/text"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="评论"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:layout_toRightOf="@+id/textView9"
            />
        <com.nju.View.SchoolFriendAweTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comment_icon"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginEnd="@dimen/phone_apadding"
            android:id="@+id/fragment_person_circle_detail_pic_comment_awe"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            />
        <com.nju.View.SchoolFriendAweTextView
            android:layout_width="wrap_content"
            android:text="@string/praise_icon"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/phone_apadding"
            android:layout_toStartOf="@+id/fragment_person_circle_detail_pic_comment_awe"
            />
    </RelativeLayout>
</RelativeLayout>
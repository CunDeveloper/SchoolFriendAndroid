<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/alumni_vo_imageView"
        android:src="@drawable/cheese_1"
        android:layout_marginEnd="@dimen/phone_apadding"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:text="1"
        android:id="@+id/alumni_vo_name"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/alumni_vo_imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/alumni_vo_label"
        android:text="1"
        android:layout_alignBottom="@+id/alumni_vo_name"
        android:layout_toEndOf="@+id/alumni_vo_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/light_blue"
        android:layout_marginTop="@dimen/phone_apadding"
        android:id="@+id/alumni_vo_title"
        android:text="1"
        android:layout_below="@+id/alumni_vo_label"
        android:layout_toEndOf="@+id/alumni_vo_imageView" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/alumni_vo_date"
        android:text="1"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="@dimen/phone_apadding"
        android:layout_below="@+id/alumni_vo_simple_desc"
        android:layout_alignStart="@+id/alumni_vo_simple_desc" />
    <com.nju.View.SchoolFriendAweTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/comment_icon"
        android:layout_marginRight="@dimen/phone_apadding"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignTop="@+id/alumni_vo_date"
        android:layout_alignRight="@+id/alumni_vo_comment_number"

        android:id="@+id/view" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1"
        android:textColor="@android:color/black"
        android:id="@+id/alumni_vo_comment_number"
        android:layout_alignBottom="@+id/view"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1"
        android:textColor="@android:color/black"
        android:id="@+id/alumni_vo_praise_number"
        android:layout_marginEnd="6dp"
        android:layout_alignBottom="@+id/view"
        android:layout_toStartOf="@+id/view" />

    <TextView
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:maxLines="2"
        android:ellipsize="end"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_toEndOf="@+id/alumni_vo_imageView"
        android:layout_below="@+id/alumni_vo_title"
        android:id="@+id/alumni_vo_simple_desc" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/phone_apadding"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/alumni_vo_simple_desc"
        android:layout_alignStart="@+id/alumni_vo_date" />

    <com.nju.View.SchoolFriendAweTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/praise_icon"
        android:id="@+id/textView23"
        android:layout_alignBottom="@+id/alumni_vo_praise_number"
        android:layout_toStartOf="@+id/alumni_vo_praise_number" />
</RelativeLayout>